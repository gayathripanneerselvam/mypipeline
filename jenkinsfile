pipeline {
    agent any
    tools {
        jdk 'jdk1.8'
        maven 'maven-3.5.2'
		}
    stages {
        stage ('Initialize') {
            steps {
                sh '''
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                '''
            }
        }

        stage ('Build') {
            steps {
                git "https://github.com/john-smart/game-of-life.git"
               withEnv(["PATH=${tool 'maven-3.5.2'}/bin:${tool 'jdk1.8'}/bin:${env.PATH}"]){
               sh 'mvn clean package'
            }}
            post {
                success {
                    archiveArtifacts artifacts: '**/target/*.jar', fingerprint: true
                    junit '**/target/surefire-reports/*.xml' 
                }
            }
        }
    }
}
